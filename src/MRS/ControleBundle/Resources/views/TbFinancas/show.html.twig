{% extends '::base.html.twig' %}

{% block body -%}
    <h1></h1>

    <table class="jumbotron">
        <tbody>
            <tr>
                <th>Data Criacao:</th>
                <td>{{ entity.finDataCadastro|date('d/m/Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Valor:</th>
                <td>{{ entity.finValor | number_format(2,',','.') }}</td>
            </tr>
            <tr>
                <th>Descricao:</th>
                <td>{{ entity.finDescricao }}</td>
            </tr>
            <tr>
                <th>Tipo:</th>
                <td>{{ entity.tenCodigo }}</td>
            </tr>
            <tr>
                <th>Categoria:</th>
                <td>{{ entity.catCodigo }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('financas') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('financas_edit', { 'id': entity.finCodigo }) }}">
            <button class="btn btn-primary">Edit</button>
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
