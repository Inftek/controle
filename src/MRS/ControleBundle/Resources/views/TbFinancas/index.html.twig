{% extends '::base.html.twig' %}

{% block title %} Lista de Finanças {% endblock %}

{% block body -%}

    {{ include('@MRSControle/TbFinancas/Template/painel.html.twig') }}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Pesquisar | R$ {{ render(controller('MRSControleBundle:Serializer:viewTotalOnPeriod',{'dataInicial':datas.dataInicial, 'dataFinal': datas.dataFinal })) | number_format(2,',','.')}} </h3>
        </div>

        <div class="panel-body">
            <form class="form-inline" method="post" action="{{ path('financas') }}">

                <div class="form-group">
                   {# <label for="dataInicial">Data Inicial:</label>#}
                    <input type="date" name="dataInicial" value="{{ datas.dataInicial }}" class="form-control">
                </div>

                <div class="form-group">
{#                    <label for="dataFinal">Data Final:</label>#}
                    <input type="date" name="dataFinal" value="{{ datas.dataFinal }}" class="form-control">
                </div>

                    <button type="submit" class="btn btn-default">Procurar</button>

            </form>
        </div>

    </div>



    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Lista</h3>
                </div>

                <div class="panel-body">


                    <table class="table table-bordered table-condensed table-hover table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Data</th>
                            <th>Valor</th>
                            <th>Descricao</th>
                            <th>Categoria</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for entity in entities %}
                            <tr>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Opções <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="{{ path('financas_show', { 'id': entity.finCodigo }) }}">
                                                    <span class="glyphicon glyphicon-list-alt"></span>
                                                    Mostrar
                                                </a>
                                            </li>
                                            <li>
                                                <a href="{{ path('financas_edit', { 'id': entity.finCodigo }) }}">
                                                    <span  class="glyphicon glyphicon-edit"></span>
                                                    Editar
                                                </a>
                                            </li>
                                        </ul>
                                    </div>

                                </td>
                                <td><a href="{{ path('financas_show', { 'id': entity.finCodigo }) }}">
                                        {{ entity.finDataCadastro | date('d/m/Y') }}
                                    </a>
                                </td>
                                <td>R$ {{ entity.finValor|number_format(2,',','.') }}</td>
                                <td>{{ entity.finDescricao }}</td>
                                <td>{{ entity.catCodigo }}</td>

                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
