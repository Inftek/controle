{% extends '::base.html.twig' %}

{% block body -%}

    {{ include('@MRSControle/TbFinancas/Template/painel.html.twig') }}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Pesquisar</h3>
        </div>

        <div class="panel-body">
            <form class="form-inline" method="get" action="{{ path('financas') }}">
                <div class="form-group">
                    <label for="exampleInputName2">Data Inicial:</label>
                    <input type="date" name="dataInicial" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail2">Data Inicial:</label>
                    <input type="date" name="dataFinal" class="form-control">
                </div>

                <button type="submit" class="btn btn-default">Procurar</button>

            </form>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <h1>Lista</h1>

            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Data</th>
                    <th>Valor</th>
                    <th>Descricao</th>
                    <th>Codigo</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('financas_show', { 'id': entity.finCodigo }) }}">
                                {{ entity.finDataCadastro | date('d/m/Y') }}
                            </a>
                        </td>
                        <td>{{ entity.finValor|number_format(2,',','.') }}</td>
                        <td>{{ entity.finDescricao }}</td>
                        <td>{{ entity.catCodigo }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('financas_show', { 'id': entity.finCodigo }) }}">
                                        <button class="btn btn-primary">
                                            <span>Mostrar</span>
                                        </button>
                                    </a>

                                    <a href="{{ path('financas_edit', { 'id': entity.finCodigo }) }}">
                                        <button class="btn btn-primary">
                                            <span>Editar</span>
                                        </button>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul class="list-group">
                <li class="list-group-item">
                    <a href="{{ path('financas_new') }}">
                        <button class="btn btn-primary">Novo</button>
                    </a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
